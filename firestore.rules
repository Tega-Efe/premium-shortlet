rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Bookings collection - public read/write for now
    // You can customize these rules based on your needs
    match /bookings/{bookingId} {
      allow read, write: if true;
    }
    
    // Listings collection - public read/write
    match /listings/{listingId} {
      allow read, write: if true;
    }
    
    // Reviews collection - public read/write
    match /reviews/{reviewId} {
      allow read, write: if true;
    }
    
    // Default: Allow all access for now (customize as needed)
    // In production, you should implement proper validation rules
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
